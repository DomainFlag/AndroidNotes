<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/dimen_component"
    android:paddingRight="@dimen/dimen_component"
    android:paddingBottom="@dimen/dimen_relative"
    android:paddingTop="@dimen/dimen_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="@dimen/dimen_component"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            style="@style/component_style">

            <TextView
                android:id="@+id/label_value"
                tools:text="@string/label_radio"
                style="@style/label_style"/>

            <TextView
                android:id="@+id/content_value"
                tools:text="@string/label_radio"
                style="@style/content_style"/>

            <TextView
                android:id="@+id/snippet_value"
                tools:text="@string/label_radio"
                style="@style/snippet_style"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>