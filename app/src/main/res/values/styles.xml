<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_component</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">serif-monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_subheader</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="component_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimen_relative</item>
        <item name="android:textSize">@dimen/dimen_subheader</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_content_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimen_relative</item>
        <item name="android:textSize">@dimen/dimen_paragraph</item>
        <item name="android:textColor">@color/colorTertiary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="content_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimen_relative</item>
    </style>

    <style name="snippet_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimen_relative</item>
        <item name="android:padding">@dimen/dimen_relative</item>
        <item name="android:background">@color/colorTertiary</item>
        <item name="android:textColor">@color/colorIconsText</item>
    </style>

    <style name="demo_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="demo_output_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="demo_trigger_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorIconsText</item>
        <item name="android:text">@string/component_button</item>
    </style>

    <style name="checkbox_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="form_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorTertiary</item>
        <item name="android:padding">@dimen/dimen_relative</item>
        <item name="android:layout_margin">@dimen/dimen_relative</item>
        <item name="android:textColorHint">@color/colorIconsText</item>
        <item name="android:textColor">@color/colorIconsText</item>
        <item name="android:textSize">@dimen/dimen_paragraph</item>
    </style>

</resources>
