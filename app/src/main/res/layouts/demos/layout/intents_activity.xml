<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_component"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/upload_image"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:theme="@style/AppTheme"
                android:padding="@dimen/dimen_component"
                android:background="@drawable/bordered_box"
                style="@style/component_style">

                <ImageView
                    android:id="@+id/empty_package"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:contentDescription="@string/label_content_description"
                    android:src="@drawable/empty_package"/>

                <TextView
                    android:id="@+id/upload_image_description"
                    android:text="@string/label_content_description"
                    android:layout_gravity="center"
                    style="@style/label_style"/>

            </LinearLayout>

            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/components_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_relative"
                android:orientation="horizontal"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>