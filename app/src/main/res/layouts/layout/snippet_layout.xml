<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorTertiary"
        card_view:contentPadding="@dimen/dimen_component"
        card_view:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/snippet_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorIconsText"
            android:textSize="@dimen/dimen_subparagraph"
            tools:text="Text here"/>

    </android.support.v7.widget.CardView>

</LinearLayout>